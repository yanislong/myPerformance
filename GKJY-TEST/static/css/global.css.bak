#button {
    background-color: #e7e7e7; /* Green */
    /*border: none;*/
    color: #000;
    padding: 2px 8px;
    text-align: center;
    margin: 2px;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
    cursor:pointer;
    border: 1px solid #222;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
}

#button:hover {
    background-color: #000; /* Green */
    color: white;
}
